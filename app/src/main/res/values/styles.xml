<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- so that contextual action mode will hide toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!-- MaterialEditText -->
        <item name="met_primaryColor">@color/accent</item>
        <item name="met_helperTextColor">@color/accent</item>

        <!-- all button color -->
        <item name="colorButtonNormal">@color/accent</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
    </style>

    <!-- AlertDialog -->

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
